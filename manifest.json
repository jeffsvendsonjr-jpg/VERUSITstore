{
  "manifest_version": 3,
  "name": "VerusIT",
  "version": "1.0.0",
  "description": "Fresh ink, not old links. See how old Google results are before you click.",
  "host_permissions": ["https://www.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "css": ["content/hover.css"],
      "js": ["content/hover.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}